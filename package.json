{
  "name": "mpowerio-content-engine",
  "version": "0.1.0",
  "private": true,
  "description": "Automated content pipeline: Research → Scripts → Videos → Repurpose → Post → Analytics",
  "author": "mpowerio.ai LLC",
  "license": "UNLICENSED",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules",
