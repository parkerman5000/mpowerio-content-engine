# ===========================================
# mpowerio Content Engine - Environment Config
# ===========================================

# Supabase
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Claude API (for script generation)
ANTHROPIC_API_KEY=your-anthropic-api-key

# HeyGen (for video generation)
HEYGEN_API_KEY=your-heygen-api-key
HEYGEN_AVATAR_ID=your-avatar-id

# ElevenLabs (for voice synthesis)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-voice-id

# Social Platform APIs (for posting)
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token

YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
YOUTUBE_REFRESH_TOKEN=your-youtube-refresh-token

TIKTOK_ACCESS_TOKEN=your-tiktok-access-token

INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# Application
NODE_ENV=development
PORT=3000

# Redis (for job queues)
REDIS_URL=redis://localhost:6379

# n8n (optional automation)
N8N_WEBHOOK_URL=http://localhost:5678/webhook
